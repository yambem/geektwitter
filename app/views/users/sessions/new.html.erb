<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
      <h1 class="text-center font-weight-bold pt-5">ログインする</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field pt-3">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12 form-control" %>
        </div>
        <div class="field pt-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "off", class: "col-md-12" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field pt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :ユーザ名を記憶する %>
          </div>
        <% end -%>
        <div class="actions pt-3">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="pt-3">
      </div>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>
