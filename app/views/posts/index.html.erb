
<body>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">THRIFT STORE</h1>
        <div class="list-group">
          <% @brands.each do |t| %>
          <a href="#" class="list-group-item"><%= t.name %></a>
          <% end %>

          <%= form_tag posts_path, method: :get, class: 'boards__searchForm' do %>
            <%= select_tag :brand_id,
                          options_from_collection_for_select(Brand.all, :id, :name, params[:brand_id]),
                          {
                            prompt: '絞り込み検索',
                            onchange: 'submit(this.form);'
                          }
            %>
          <% end %>

        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/assets/auralee.jpg" class="d-block aaa" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/assets/FD.jpg" class="d-block aaa" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/assets/graphpaper20aw.jpg" class="d-block aaa" alt="...">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>

        </div>

          <div class="row">
            <% @posts.each do |t| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <a class="MATSUOKA" href="/posts/<%= t.id %>"><%= image_tag t.image_url, size: "250x200" if t.image? %></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a><%= link_to t.product.name, post_path(t.id) %></a>
                  </h4>
                  <h5>¥<%= t.price%></h5>
                  <p class="card-text"><%= t.product.brand.name%></p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">
                    <% if user_signed_in? %>
                        <% if current_user.already_liked?(t) %>
                            <%= link_to post_like_path(id: t.id, post_id: t.id), method: :delete do %>                
                                <i class="fas fa-heart"></i><%= t.likes.count %>
                            <% end %>
                        <% else %>
                            <%= link_to post_likes_path(id: t.id, post_id: t.id), method: :post do %>
                                <i class="far fa-heart"></i><%= t.likes.count %>
                            <% end %>
                        <% end %>
                    <% else %>
                      <i class="far fa-heart"></i><%= t.likes.count %>
                    <% end %>
                　</small>
                </div>
              </div>
            </div>
            <% end %>
          </div>

          <!-- /.row -->
      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->
